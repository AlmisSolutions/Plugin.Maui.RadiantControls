<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plugin.Maui.RadiantControls.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Plugin.Maui.RadiantControls.Sample"
    xmlns:pages="clr-namespace:Plugin.Maui.RadiantControls.Sample.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="RcAvatar and RcAvatarGroup"
        ContentTemplate="{DataTemplate pages:AvatarPage}"
        Route="AvatarPage" />

    <ShellContent
        Title="RcListView"
        ContentTemplate="{DataTemplate pages:ListViewPage}"
        Route="ListViewPage" />

</Shell>

