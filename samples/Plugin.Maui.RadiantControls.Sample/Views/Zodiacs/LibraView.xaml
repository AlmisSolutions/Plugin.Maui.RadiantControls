<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Plugin.Maui.RadiantControls.Sample.Views.Zodiacs.LibraView">
    <VerticalStackLayout
        HorizontalOptions="Center">
        <Label
            x:Name="TitleLabel"
            Text="Libra"
            FontSize="Title"
            HorizontalTextAlignment="Center"/>
        <Image
            Source="libra.png"
            HeightRequest="128">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior>
                    <toolkit:IconTintColorBehavior.TintColor>
                        <AppThemeBinding Light="Black" Dark="White" />
                    </toolkit:IconTintColorBehavior.TintColor>
                </toolkit:IconTintColorBehavior>
            </Image.Behaviors>
        </Image>
        <Label
            Text="Sep 23 - Oct 22"
            HorizontalTextAlignment="Center"
            FontSize="Subtitle" />
        <Label
            Text="Balanced, diplomatic, and social. They seek harmony and fairness in relationships."
            HorizontalTextAlignment="Center"
            FontSize="Body" />
    </VerticalStackLayout>
</ContentView>