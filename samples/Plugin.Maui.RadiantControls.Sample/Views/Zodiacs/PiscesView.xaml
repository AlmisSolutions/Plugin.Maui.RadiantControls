<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Plugin.Maui.RadiantControls.Sample.Views.Zodiacs.PiscesView">
    <VerticalStackLayout
        HorizontalOptions="Center">
        <Label
            x:Name="TitleLabel"
            Text="Pisces"
            FontSize="Title"
            HorizontalTextAlignment="Center"/>
        <Image
            Source="pisces.png"
            HeightRequest="128">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior>
                    <toolkit:IconTintColorBehavior.TintColor>
                        <AppThemeBinding Light="Black" Dark="White" />
                    </toolkit:IconTintColorBehavior.TintColor>
                </toolkit:IconTintColorBehavior>
            </Image.Behaviors>
        </Image>
        <Label
            Text="Feb 19 - Mar 20"
            HorizontalTextAlignment="Center"
            FontSize="Subtitle" />
        <Label
            Text="Compassionate, intuitive, and artistic. They are dreamers who often have a strong spiritual connection."
            HorizontalTextAlignment="Center"
            FontSize="Body" />
    </VerticalStackLayout>
</ContentView>