<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Plugin.Maui.RadiantControls.Sample.Views.Zodiacs.ScorpioView">
    <VerticalStackLayout
        HorizontalOptions="Center">
        <Label
            x:Name="TitleLabel"
            Text="Scorpio"
            FontSize="Title"
            HorizontalTextAlignment="Center"/>
        <Image
            Source="scorpio.png"
            HeightRequest="128">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior>
                    <toolkit:IconTintColorBehavior.TintColor>
                        <AppThemeBinding Light="Black" Dark="White" />
                    </toolkit:IconTintColorBehavior.TintColor>
                </toolkit:IconTintColorBehavior>
            </Image.Behaviors>
        </Image>
        <Label
            Text="Oct 23 - Nov 21"
            HorizontalTextAlignment="Center"
            FontSize="Subtitle" />
        <Label
            Text="Intense, passionate, and mysterious. They are driven by deep emotions and desires."
            HorizontalTextAlignment="Center"
            FontSize="Subtitle"/>
    </VerticalStackLayout>
</ContentView>