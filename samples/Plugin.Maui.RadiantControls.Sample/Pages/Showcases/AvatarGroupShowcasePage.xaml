<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageViews="clr-namespace:Plugin.Maui.RadiantControls.Sample.Pages.Showcases.Views"
    xmlns:views="clr-namespace:Plugin.Maui.RadiantControls.Sample.Views"
    x:Class="Plugin.Maui.RadiantControls.Sample.Pages.Showcases.AvatarGroupShowcasePage"
    Title="Avatar Group Showcase">
    <ScrollView>
        <VerticalStackLayout
            Margin="15"
            Spacing="5">
            <Label
                Text="Avatar Group"
                FontSize="48"
                FontAttributes="Bold"
                Margin="0,0,0,10"/>
            <Label
                Text="Avatar group stacked from bottom to top"
                FontSize="24"/>
            <views:LazyLoaderView
                x:Name="AvatarGroupBottomToTop"
                x:TypeArguments="pageViews:AvatarGroupBottomToTopView"/>
            <Label
                Text="Avatar group stacked from top to bottom"
                FontSize="24"/>
            <views:LazyLoaderView
                x:Name="AvatarGroupTopToBottom"
                x:TypeArguments="pageViews:AvatarGroupTopToBottomView"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>