<?xml version="1.0" encoding="utf-8" ?>
<Frame
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rc="clr-namespace:Plugin.Maui.RadiantControls;assembly=Plugin.Maui.RadiantControls"
    x:Class="Plugin.Maui.RadiantControls.Sample.Pages.Showcases.Views.AvatarCircularView"
    Padding="10"
    CornerRadius="10">
    <HorizontalStackLayout
        Spacing="10">
        <rc:RcAvatar
            ImageSource="avatar.jpeg"
            Size="32"
            VerticalOptions="End"/>
        <rc:RcAvatar
            ImageSource="avatar.jpeg"
            Size="48"
            VerticalOptions="End"/>
        <rc:RcAvatar
            ImageSource="avatar.jpeg"
            Size="64"
            VerticalOptions="End"/>
        <rc:RcAvatar
            ImageSource="avatar.jpeg"
            Size="80"
            VerticalOptions="End"/>
        <rc:RcAvatar
            ImageSource="avatar.jpeg"
            Size="96"
            VerticalOptions="End"/>
    </HorizontalStackLayout>
</Frame>