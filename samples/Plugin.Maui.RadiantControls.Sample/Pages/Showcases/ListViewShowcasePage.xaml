<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Plugin.Maui.RadiantControls.Sample.Views"
    xmlns:pageViews="clr-namespace:Plugin.Maui.RadiantControls.Sample.Pages.Showcases.Views"
    x:Class="Plugin.Maui.RadiantControls.Sample.Pages.Showcases.ListViewShowcasePage"
    Title="List View Showcase">
    <ScrollView>
        <StackLayout
            Margin="15"
            Spacing="5"
            VerticalOptions="FillAndExpand">
            <Label
                Text="ListView"
                FontSize="48"
                FontAttributes="Bold"
                Margin="0,0,0,10"/>
            <Label
                Text="ListView with growing content"
                FontSize="24"/>
            <views:LazyLoaderView
                x:Name="ListViewWithGrowingContent"
                x:TypeArguments="pageViews:ListViewWithGrowingContentView"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
