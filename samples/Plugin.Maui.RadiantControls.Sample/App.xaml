<?xml version = "1.0" encoding = "UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Plugin.Maui.RadiantControls.Sample.Converters"
    x:Class="Plugin.Maui.RadiantControls.Sample.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ListToStringSeparatedConverter x:Key="ListToStringSeparatedConverter" />
            <converters:StringToBooleanConverter x:Key="StringToBooleanConverter" />
            <converters:StringToThicknessConverter x:Key="StringToThicknessConverter" />
            <converters:StringToColorConverter x:Key="StringToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

