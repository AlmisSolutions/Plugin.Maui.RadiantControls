<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Plugin.Maui.RadiantControls.RcListView"
    x:Name="Self">
    <Grid>
        <ScrollView
            x:Name="ScrollListView"
            Scrolled="ScrollListView_Scrolled">
            <StackLayout
                x:Name="StackListView"
                Orientation="{Binding Orientation, Source={x:Reference Self}}"
                VerticalOptions="FillAndExpand"
                Spacing="{Binding ItemSpacing, Source={x:Reference Self}}"
                ChildAdded="StackListView_ChildAdded"
                ChildRemoved="StackListView_ChildRemoved">
            </StackLayout>
        </ScrollView>
        <BoxView
            Color="Transparent"
            InputTransparent="{Binding IsScrollingEnabled,Source={x:Reference Self}}"
            WidthRequest="{Binding Width,Source={x:Reference ScrollListView}}"
            HeightRequest="{Binding Height,Source={x:Reference ScrollListView}}"/>
    </Grid>
</ContentView>

